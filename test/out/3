digraph {
  ranksep=4;
  rankdir=LR;
  concentrate=true;
  node [shape=box, style=filled];
  graph [overlap=false];
  "1" [label="a", fillcolor="#9b59b6", penwidth=0, fontname="helvetica", fontcolor=white];
  "2" [label="b", fillcolor="#9b59b6", penwidth=0, fontname="helvetica", fontcolor=white];
  "3" [label="c", fillcolor="#d35400", penwidth=0, fontname="helvetica", fontcolor=white];
  "4" [label="d", fillcolor="#d35400", penwidth=0, fontname="helvetica", fontcolor=white];
  "1" -> "3" [style=solid, label="link", color="#d35400", fontcolor="#d35400"];
  "2" -> "4" [style=solid, label="link", color="#d35400", fontcolor="#d35400"];
  "3" -> "1" [style=solid, label="link", color="#9b59b6", fontcolor="#9b59b6"];
  "4" -> "2" [style=solid, label="link", color="#9b59b6", fontcolor="#9b59b6"];
  subgraph A {
    "A" [label=A, fillcolor="#9b59b6", penwidth=0, fontname="helvetica", fontcolor=white];
    rank=same;
    "1";
    "2";
  }
  subgraph B {
    "B" [label=B, fillcolor="#d35400", penwidth=0, fontname="helvetica", fontcolor=white];
    rank=same;
    "3";
    "4";
  }
}
